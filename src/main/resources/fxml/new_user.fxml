            </HBox>
            <AnchorPane>
               <children>
                  <Button fx:id="buttonSave" alignment="CENTER" contentDisplay="CENTER" disable="true" layoutX="175.0" layoutY="-1.0" mnemonicParsing="false" onAction="#onButtonSaveAction" styleClass="primary" text="Guardar" textAlignment="CENTER" />
